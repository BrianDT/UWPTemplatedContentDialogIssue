<ContentDialog
    x:Class="TemplatedContentDialogIssue.Controls.AltProgressDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TemplatedContentDialogIssue.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <ContentDialog.Resources>
        <SolidColorBrush x:Key="ContentDialogBackground" Color="#AA000000" />
        <!--<SolidColorBrush x:Key="ContentDialogBorderBrush" Color="CadetBlue" />-->
        <SolidColorBrush x:Key="ContentDialogTopOverlay" Color="#AA000000" />
        <x:Double x:Key="ContentDialogBorderWidth">0</x:Double>
        <x:Double x:Key="ContentDialogMinHeight">32</x:Double>
        <CornerRadius x:Key="OverlayCornerRadius">8,8,8,8</CornerRadius>
        <Thickness x:Key="ContentDialogPadding">8,4,8,4</Thickness>
    </ContentDialog.Resources>

    <!--<ContentDialog.Template>
        <ControlTemplate TargetType="ContentDialog">
            <Grid VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <ContentPresenter Grid.Row="1" VerticalAlignment="Bottom" 
                                  HorizontalAlignment="Center" 
                                  Content="{TemplateBinding Content}"/>
            </Grid>
        </ControlTemplate>
    </ContentDialog.Template>-->

    <!--<Border x:Name="BackgroundElement" BorderThickness="0" CornerRadius="8" Background="#AA000000" Padding="8,4,8,4"
            Margin="0,12,0,12">-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{x:Bind Message, Mode=OneWay}"
                        TextWrapping="WrapWholeWords"
                        Margin="16,0,16,0"
                        VerticalAlignment="Center"
                        Foreground="White" FontSize="12"/>
            <Button Grid.Column="1" Content="UNDO"
                    Command="{x:Bind UndoCommand, Mode=OneWay}"
                    Background="Gray"
                    Foreground="White"
                    Margin="12,4,12,4"/>
        </Grid>
    <!--</Border>-->

</ContentDialog>
